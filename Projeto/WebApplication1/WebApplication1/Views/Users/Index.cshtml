@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "List of Users";
}

<h1>@ViewData["Title"]</h1>

@*TEMP DATA*@
@{
    if(TempData.Peek("Message") != null)
    {
        <div class="alert alert-success">@TempData.Peek("Message")</div>
    }
}

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Phone Number</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="actionButtonEdit">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="actionButtonDelete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
